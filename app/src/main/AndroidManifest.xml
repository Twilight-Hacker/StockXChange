<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.galadar.stockxchange" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ShareActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_share"
            android:parentActivityName=".MainActivity"
            android:theme="@style/FullscreenTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.galadar.stockxchange.MainActivity" />
        </activity>
        <activity
            android:name=".InfoActivity"
            android:label="@string/title_activity_info"
            android:parentActivityName=".MainActivity"
            android:theme="@style/FullscreenTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.galadar.stockxchange.MainActivity" />
        </activity>
        <activity
            android:name=".BuyActivity"
            android:label="@string/title_activity_buy"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.galadar.stockxchange.MainActivity" />
        </activity>
        <activity
            android:name=".SellActivity"
            android:label="@string/title_activity_sell"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.galadar.stockxchange.MainActivity" />
        </activity>
        <activity
            android:name=".CompanyActivity"
            android:label="@string/title_activity_company"
            android:parentActivityName=".ShareActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.galadar.stockxchange.ShareActivity" />
        </activity>
        <activity
            android:name=".PlayerInfoActivity"
            android:label="@string/title_activity_player_info"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.galadar.stockxchange.MainActivity" />
        </activity>
    </application>

</manifest>
