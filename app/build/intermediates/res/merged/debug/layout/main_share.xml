<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:weightSum="1.0"
    android:layout_height= "wrap_content"
    android:background="@color/black"
    android:id="@+id/shareData">


    <TextView
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_weight="0.3"
        android:id="@+id/shareInfo"
        android:background="@color/black"
        android:clickable="true"
        android:onClick="clickName"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:textAllCaps="true"
        android:textStyle="normal"
        android:textSize="28sp"
        android:textColor="@color/white" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_weight="0.4"
        android:id="@+id/sharePrice"
        android:background="@color/black"
        android:clickable="true"
        android:onClick="clickPrice"
        android:textAllCaps="true"
        android:textStyle="normal"
        android:textSize="28sp"
        android:textColor="@color/white" />
    <Button
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_weight="0.15"
        android:id="@+id/BuyButton"
        android:background="@color/black"
        android:textColor="@color/white"
        android:onClick="BuyClick"
        android:text="@string/Buy_Button"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_weight="0.15"
        android:id="@+id/SellButton"
        android:background="@color/black"
        android:textColor="@color/white"
        android:onClick="SellClick"
        android:text="@string/Sell_Button"/>

</LinearLayout><!-- From: file:/home/sash/AndroidStudioProjects/StockXChange/app/src/main/res/layout/main_share.xml -->