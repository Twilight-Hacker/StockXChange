<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/black"
tools:context="com.example.galadar.stockxchange.ShareActivity"
android:id="@+id/ActivityShareLayout" >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1.0"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/TopBar"
        android:background="@color/black"
        android:layout_marginBottom="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/PlayerDataInfo"
            android:layout_weight="0.7"
            android:textColor="@color/white"
            android:text="Lvl 1: $1000000000 (99)"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:id="@+id/DaytimeInfo"
            android:textColor="@color/white"
            android:text="Term 50, Day 38"/>

    </LinearLayout>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="175dp"
        android:id="@+id/ShareImage"
        android:layout_below="@id/TopBar"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:background="@color/white" />


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ShareImage"
        android:id="@+id/ShareDataLayout"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/Share_Name"
            android:background="@color/black"
            android:textColor="@color/white"
            android:id="@+id/ShareNameLabel"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/Total_Shares"
            android:background="@color/black"
            android:textColor="@color/white"
            android:id="@+id/ShareTotalLabel"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/ShareNameLabel"/>

        <TextView
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/Share_Current_Price"
            android:background="@color/black"
            android:textColor="@color/white"
            android:id="@+id/ShareCurrPriLabel"
            android:layout_below="@id/ShareTotalLabel" />

        <TextView
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/Share_Owned"
            android:background="@color/black"
            android:textColor="@color/white"
            android:id="@+id/ShareOwnedLabel"
            android:layout_below="@id/ShareCurrPriLabel" />

        <TextView
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/Shares_Owned_Value"
            android:background="@color/black"
            android:textColor="@color/white"
            android:id="@+id/ShareOwnedVLabel"
            android:layout_below="@id/ShareOwnedLabel" />

        <TextView
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/Share_Prev_Close"
            android:background="@color/black"
            android:textColor="@color/white"
            android:id="@+id/SharePrevLabel"
            android:layout_below="@id/ShareOwnedVLabel" />

        <TextView
            android:layout_marginRight="28dp"
            android:layout_marginEnd="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/Zero"
            android:background="@color/black"
            android:textColor="@color/white"
            android:id="@+id/ShareNameData"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_marginRight="28dp"
            android:layout_marginEnd="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/Zero"
            android:background="@color/black"
            android:textColor="@color/white"
            android:id="@+id/ShareTotalData"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/ShareNameData"/>

        <TextView
            android:layout_marginRight="28dp"
            android:layout_marginEnd="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/Zero"
            android:background="@color/black"
            android:textColor="@color/white"
            android:id="@+id/ShareCurrPriData"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/ShareTotalData" />

        <TextView
            android:layout_marginRight="28dp"
            android:layout_marginEnd="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/Zero"
            android:background="@color/black"
            android:textColor="@color/white"
            android:id="@+id/ShareOwnedData"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/ShareCurrPriData" />

        <TextView
            android:layout_marginRight="28dp"
            android:layout_marginEnd="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/Zero"
            android:background="@color/black"
            android:textColor="@color/white"
            android:id="@+id/ShareOwnedVData"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/ShareOwnedData" />

        <TextView
            android:layout_marginRight="28dp"
            android:layout_marginEnd="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/Zero"
            android:background="@color/black"
            android:textColor="@color/white"
            android:id="@+id/SharePrevData"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/ShareOwnedVData" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/fullscreen_content_controls"
        style="?metaButtonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <Button
            android:layout_width="fill_parent"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:textColor="@color/white"
            android:text="@string/Buy_Button"
            android:id="@+id/BuyButton"
            android:textSize="30sp"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_weight="0.4"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:textColor="@color/white"
            android:text="@string/CompanyInfo"
            android:id="@+id/CompanyInfo"
            android:textSize="30sp"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:textColor="@color/white"
            android:text="@string/Sell_Button"
            android:id="@+id/SellButton"
            android:textSize="30sp" />

    </LinearLayout>

</RelativeLayout>
